extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= tit
    .w3-container
        table.w3-table-all
            tr 
                th Ano
                th Titulo
                th Elenco
                th Géneros
                th Opções
            each f in lfilmes
             tr
              td= f.year
              td= f.title
              td
                ul.w3-ul
                  each actor in f.cast
                    li
                      a(href=`/filmes/autor/${actor}`) #{actor}

              td
                ul.w3-ul
                  each gen in f.genres
                    li= gen
              td
                a.w3-button.w3-red.w3-hover-pale-red(style="width: 100px;" href=`/filmes/delete/${f.id}`) Apagar
                a.w3-button.w3-orange.w3-hover-amber(style="width: 100px;" href=`/filmes/edit/${f.id}`) Editar

    footer.w3-container.w3-blue
      address Generated by EW-2025